<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="start|center_vertical">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â† Back"
                android:textColor="#FF6B35"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:padding="8dp"
                android:paddingStart="0dp" />

        </LinearLayout>

        <!-- Header -->
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review for Restaurant"
            android:textColor="#FF6B35"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:gravity="center" />

        <!-- Star Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Rating"
            android:textColor="#FF6B35"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="0"
            android:layout_marginBottom="30dp"
            app:theme="@style/Widget.AppCompat.RatingBar" />

        <!-- Comment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Review"
            android:textColor="#FF6B35"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Write your review here..."
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="30dp" />

        <!-- Photo Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Photo (Optional)"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/ivReviewPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_add_photo"
            android:scaleType="centerCrop"
            android:background="#F5F5F5"
            android:contentDescription="Review Photo"
            android:layout_marginBottom="15dp" />

        <!-- Photo Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Take Photo"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:padding="12dp"
                android:layout_marginEnd="5dp" />

            <Button
                android:id="@+id/btnChoosePhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose Photo"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                android:padding="12dp"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <!-- Delete Photo Button -->
        <Button
            android:id="@+id/btnDeletePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Photo"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:padding="12dp"
            android:layout_marginBottom="30dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Review"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6B35"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>