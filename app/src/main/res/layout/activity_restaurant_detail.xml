<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FrameLayout untuk image dengan button overlap -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <!-- Restaurant Image -->
            <ImageView
                android:id="@+id/ivRestaurant"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pakgembus"
                android:contentDescription="Restaurant Image" />

            <!-- Back Button -->
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/circle_background_small"
                android:padding="8dp"
                android:layout_gravity="start|top" />

            <!-- Favorite Button -->
            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_favorite_border"
                android:contentDescription="Favorite"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/circle_background_small"
                android:padding="8dp"
                android:layout_gravity="end|top" />

        </FrameLayout>

        <!-- Restaurant Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="25dp">

                <!-- Restaurant Name and Rating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRestaurantName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ayam Gepuk Pak Gembus"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rating_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="4.2"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Rating Stars -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvReviewStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­â­â­â­â˜† â€¢ Loading reviews..."
                        android:textColor="#666666"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_location_pin" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jl. Sudirman No. 123, Jakarta"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Opening Hours -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_time" />

                    <TextView
                        android:id="@+id/tvHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open â‹… Closes 10 PM"
                        android:textColor="#4CAF50"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Spicy Level -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="ðŸ”¥ðŸ”¥ðŸ”¥ Spicy Level: Medium-Hot"
                    android:textColor="#FF6B35"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Action Buttons - In Single Line -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnViewMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#FF6B35"
                        android:padding="12dp"
                        android:text="View Menu"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- CALL BUTTON -->
                    <Button
                        android:id="@+id/btnCall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#4CAF50"
                        android:padding="12dp"
                        android:text="ðŸ“ž Call"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <Button
                        android:id="@+id/btnDirection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:padding="12dp"
                        android:text="Directions"
                        android:textColor="#FF6B35"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Write Review Button -->
                <Button
                    android:id="@+id/btnWriteReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FF9800"
                    android:padding="14dp"
                    android:text="âœï¸ Write Review"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tabs for Details/Reviews -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:tabTextColor="#666666"
            app:tabSelectedTextColor="#FF6B35"
            app:tabIndicatorColor="#FF6B35"
            android:layout_marginTop="20dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews" />

        </com.google.android.material.tabs.TabLayout>

        <!-- Tab Content -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>